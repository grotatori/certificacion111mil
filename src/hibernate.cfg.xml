<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQL57Dialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/centrocultural</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">sql123</property>
    <property name="hibernate.connection.pool_size">1</property>
    <property name="hbm2ddl.auto">update</property>
    <property name="show_sql">true</property>
    <mapping resource="resources/hbm/Tematica.hbm.xml"/>
    <mapping resource="resources/hbm/Participante.hbm.xml"/>
    <mapping resource="resources/hbm/Profesor.hbm.xml"/>
    <mapping resource="resources/hbm/Curso.hbm.xml"/>
    <mapping resource="resources/hbm/Inscripcion.hbm.xml"/>
    <mapping resource="resources/hbm/Condicion.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
